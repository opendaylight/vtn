<features name="vtn-${project.version}" xmlns="http://karaf.apache.org/xmlns/features/v1.2.0"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.2.0 http://karaf.apache.org/xmlns/features/v1.2.0">

    <repository>mvn:org.opendaylight.controller/features-nsf/${feature.nsf.version}/xml/features</repository>

    <feature name='odl-vtn-manager-all' description="OpenDaylight VTN Manager All" version='${project.version}'>
        <feature version="${project.version}">odl-vtn-manager-java-api</feature>
        <feature version="${project.version}">odl-vtn-manager-northbound</feature>
        <feature version="${project.version}">odl-vtn-manager-neutron</feature>
    </feature>

    <feature name='odl-vtn-manager-java-api' description="OpenDaylight :: VTN Manager :: Java API" version='${project.version}'>
        <feature version="${feature.nsf.version}">odl-nsf-all</feature>
        <bundle>mvn:org.opendaylight.vtn/manager/${project.version}</bundle>
        <bundle>mvn:org.opendaylight.vtn/manager.implementation/${project.version}</bundle>
    </feature>

    <feature name='odl-vtn-manager-northbound' description="OpenDaylight :: VTN Manager :: Northbound" version='${project.version}'>
        <feature version="${project.version}">odl-vtn-manager-java-api</feature>
        <bundle>mvn:org.opendaylight.vtn/manager.northbound/${project.version}</bundle>
    </feature>

    <feature name='odl-vtn-manager-neutron' description="OpenDaylight :: VTN Manager :: Neutron Interface" version='${project.version}'>
        <feature version="${project.version}">odl-vtn-manager-java-api</feature>
        <bundle>mvn:org.opendaylight.vtn/manager.neutron/${project.version}</bundle>
    </feature>
</features>
