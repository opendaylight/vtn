<configuration scan="true">

    <appender name="VTNApplications" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/VTNApplications.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/VTNApplications.%d.log.zip</fileNamePattern>
            <maxHistory>1</maxHistory>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>256KB</maxFileSize>
        </triggeringPolicy>

        <encoder>
            <pattern>%date{"yyyy-MM-dd HH:mm:ss.SSS z"} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="error">
        <appender-ref ref="VTNApplications" />
    </root>

    <logger name="org.opendaylight.vtn.app.run.config.rest" level="ALL"/>
    <logger name="org.opendaylight.vtn.app.ate.api" level="ALL"/>
    <logger name="org.opendaylight.vtn.app.ate.beans.executionengine" level="ALL"/>
    <logger name="org.opendaylight.vtn.app.ate.beans.response" level="ALL"/>
    <logger name="org.opendaylight.vtn.app.ate.beans.testsuitresults" level="ALL"/>
    <logger name="org.opendaylight.vtn.app.ate.implementation" level="ALL"/>
    <logger name="org.opendaylight.vtn.app.ate.testengine" level="ALL"/>
</configuration>
