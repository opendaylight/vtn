<configuration scan="true">

    <appender name="VTNClient.log" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/VTNClient.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/VTNClient.%d.log.zip</fileNamePattern>
            <maxHistory>1</maxHistory>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>1MB</maxFileSize>
        </triggeringPolicy>

        <encoder>
            <pattern>%date{"yyyy-MM-dd HH:mm:ss.SSS z"} [%thread] %-5level %logger{35} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="error">
        <appender-ref ref="VTNClient.log" />
    </root>

    <!--  com.vtn.app.run.config.rest.client log level  -->
    <logger name="com.vtn.app.run.config.rest" level="DEBUG"/>
    <logger name="com.vtn.app.run.config.rest" level="INFO"/>
    <logger name="com.vtn.app.run.config.rest.client" level="TRACE"/>
    <logger name="com.vtn.app.run.config.rest" level="WARN"/>
    <logger name="com.vtn.app.run.config.rest" level="WARN"/>
</configuration>
