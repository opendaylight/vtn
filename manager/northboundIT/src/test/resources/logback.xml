<configuration scan="true">

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
      </pattern>
    </encoder>
  </appender>

  <root level="error">
    <appender-ref ref="STDOUT" />
  </root>

  <logger name="org.opendaylight.vtn.manager.northbound.integrationtest"
          level="INFO" />

  <!-- Suppress unwanted logs. -->
  <logger name="org.opendaylight.controller.security.ControllerCustomRealm"
          level="OFF"/>

</configuration>
