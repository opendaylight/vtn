<configuration scan="true">
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{"yyyy-MM-dd HH:mm:ss.SSS z"} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="error">
    <appender-ref ref="STDOUT" />
  </root>

  <!-- Suppress unwanted logs. -->
  <logger name="org.opendaylight.vtn.manager.neutron.impl.VTNManagerService"
          level="OFF"/>
  <logger name="org.opendaylight.vtn.manager.neutron.impl.MdsalUtils"
          level="OFF"/>

</configuration>
